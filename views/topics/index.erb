<% if @topics %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Topic</th>
      </tr>
    </thead>

    <tbody>
      <% @topics.each do |t| %>
        <tr href="/topics/<%= t.index %>">
          <td>
            <%= t.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>