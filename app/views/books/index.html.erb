<% if @books.empty? %>
  <p>Your library is empty! Click <%= link_to 'Here', new_book_path %> here to add a book to your library!</p>
<% else %>
  <p id="notice"><%= notice %></p>

  <div class="span6">
    <table class="table">
      <thead>
        <th>Name</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.name, book_path(book.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= javascript_include_tag params[:controller] %>